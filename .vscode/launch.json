{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Black Magic Probe",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "logging": {
                "engineLogging": true
            },
            "program": "${workspaceRoot}/build/rp2040-gb-cartridge.elf",
            "miDebuggerPath": "gdb-multiarch",
            "customLaunchSetupCommands": [
                {
                    "text": "cd ${workspaceRoot}/build"
                },
                {
                    "text": "target extended-remote 10.42.21.153:2000"
                },
                {
                    "text": "monitor tpwr enable"
                },
                {
                    "text": "monitor swdp_scan"
                },
                {
                    "text": "file rp2040-gb-cartridge.elf"
                },
                {
                    "text": "attach 1"
                },
                // {
                //     "text": "load"
                // },
                // {
                //     "text": "cd ${workspaceRoot}"
                // },
                // {
                //     "text": "break main"
                // }
            ],
            "serverLaunchTimeout": 10000,
        },
        {
            "name": "Pico Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/rp2040-gb-cartridge.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath" : "gdb-multiarch",
            "gdbTarget": "10.42.21.51:3333",
            "device": "RP2040",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "preLaunchCommands": ["set architecture arm"],
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "showDevDebugOutput": "parsed"
        },
        {
            "name": "Programm Target and Run",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/rp2040-gb-cartridge.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            // This may need to be arm-none-eabi-gdb depending on your system
            "gdbPath" : "gdb-multiarch",
            "gdbTarget": "10.42.21.51:3333",
            "device": "RP2040",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "",
            "preLaunchCommands": ["set architecture arm"],
            "postLaunchCommands": [
                "monitor reset run",
                "detach"
            ],
            "showDevDebugOutput": "parsed"
        },
    ]
}